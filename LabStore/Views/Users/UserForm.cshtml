@model LabStore.ViewModels.UserViewModel

@{
    ViewBag.Title = "UserForm";
}

<h2>Zmień dane</h2>
@using (Html.BeginForm("Save", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Formularz zmiany danych użytkownika</h4>
    <hr />
    @Html.ValidationSummary(true, "Proszę poprawić następujące dane:", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(u => u.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(u => u.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Surname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(u => u.Surname, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(u => u.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(u => u.Email)
    </div>
    @Html.HiddenFor(u => u.Id)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zmień dane" class="btn btn-primary" />
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
